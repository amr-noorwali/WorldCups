@model IEnumerable<Hotel>
@{
    
    <div class="text-center">
        <h1 class="alert" style="background-color: rgb(39, 94, 76);"><strong>الفنادق</strong> </h1>
        <div class="row">
            <div class="col-sm-8">
            </div>
            <div class="col-sm-4 sm-12">
            </div>
        </div>
    </div>//**//




    <div class="container">
        <div class="row">
            <div class="col">
                @foreach (var items in Model)
                {
                    <div class="card">
                        <div class="card-body">
                            <div class="row mt-3">
                            
                                <div class="col">
                                    <img src="/@items.Images" class="rounded" width="200" height="200" />
                                </div>

                                <div class="col">
                                    <h5>@items.Name</h5>
                                    <ul class="list list-inline">
                                       
                                    </ul>
                                </div>

                                <div class="col" >
                                    <ul class="list list-inline">
                                        <li>@items.Description</li>
                                        <li><strong>City:</strong>@items.City</li>
                                        <li><strong >SAR:</strong>@items.Price</li>
                                      
                                    </ul>
                                    <div>
                                        <button class="btn btn-success">check  availability</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    

                }
            </div>
        </div>
    </div>
    
    
}
